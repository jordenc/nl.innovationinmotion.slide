{
  "id": "nl.innovationinmotion.slide",
  "name": {
    "en": "Slide",
    "nl": "Slide"
  },
  "sdk": 2,
  "version": "0.5.0",
  "compatibility": ">=1.5.0",
  "brandColor": "#f77933",
  "author": {
    "name": "Corbata",
    "email": "info@corbata.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Corbata.nl",
        "email": "info@corbata.nl"
      },
      {
        "name": "Ruben te Bogt",
        "email": "info@rubentebogt.nl"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "email": "info@chamidmedia.nl",
        "currency": "EUR"
      }
    }
  },
  "energy": {
    "approximation": {
      "usageConstant": 1
    }
  },
  "homepage": "https://slide.store/",
  "support": "mailto:support@slide.store",
  "homeyCommunityTopicId": 11915,
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "tags": {
    "en": [
      "Curtains"
    ],
    "nl": [
      "Gordijnen"
    ]
  },
  "category": "appliances",
  "description": {
    "en": "Make your curtains smart in no-time",
    "nl": "Maak je gordijnen slim met Slide"
  },
  "capabilities": {
    "touch_go_state": {
      "type": "boolean",
      "title": {
        "en": "Touch & Go"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/touch-icon.svg"
    },
    "curtain_position": {
      "type": "number",
      "title": {
        "en": "Curtain position",
        "nl": "Gordijn positie"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/percent-icon.svg",
      "units": {
        "en": "%"
      },
      "min": 0,
      "max": 100,
      "step": 1,
      "decimals": 0
    }
  },
  "drivers": [
    {
      "id": "slide",
      "name": {
        "en": "Slide",
        "nl": "Slide"
      },
      "images": {
        "large": "drivers/slide/assets/images/large.jpg",
        "small": "drivers/slide/assets/images/small.jpg"
      },
      "class": "curtain",
      "capabilities": [
        "windowcoverings_closed",
        "windowcoverings_set",
        "curtain_position",
        "touch_go_state"
      ],
      "capabilitiesOptions": {
        "dim": {
          "title": {
            "en": "Drag to open/close",
            "nl": "Verschuif om te openen/sluiten"
          },
          "preventInsights": true,
          "preventTag": true,
          "uiQuickAction": false
        },
        "onoff": {
          "title": {
            "en": "Open/close curtain",
            "nl": "Open/sluit gordijn"
          }
        }
      },
      "connectivity": [
        "cloud",
        "lan"
      ],
      "pair": [
        {
          "id": "login",
          "template": "login_credentials",
          "options": {
            "logo": "small.jpg"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "actions": [
      {
        "id": "ImmediateStop",
        "title": {
          "en": "Immediate motor stop",
          "nl": "Stop motor direct"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select slide",
              "nl": "Selecteer slide"
            },
            "filter": "driver_id=slide"
          }
        ]
      },
      {
        "id": "EnableTouchGo",
        "title": {
          "en": "Enable Touch & Go",
          "nl": "Activeer Touch & Go"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select slide",
              "nl": "Selecteer slide"
            },
            "filter": "driver_id=slide"
          }
        ]
      },
      {
        "id": "DisableTouchGo",
        "title": {
          "en": "Disable Touch & Go",
          "nl": "Deactiveer Touch & Go"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select slide",
              "nl": "Selecteer slide"
            },
            "filter": "driver_id=slide"
          }
        ]
      },
      {
        "id": "ReCalibrate",
        "title": {
          "en": "Trigger a re-calibration",
          "nl": "Start een her-calibratie"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select slide",
              "nl": "Selecteer slide"
            },
            "filter": "driver_id=slide"
          }
        ]
      },
      {
        "id": "OpenZone",
        "title": {
          "en": "Open all curtains in one zone",
          "nl": "Open alle gordijnen in een zone"
        },
        "titleFormatted": {
          "en": "Open all curtains in zone [[zone]]",
          "nl": "Open alle gordijnen in zone [[zone]]"
        },
        "args": [
          {
            "name": "zone",
            "type": "autocomplete",
            "placeholder": {
              "en": "Zone"
            }
          }
        ]
      },
      {
        "id": "CloseZone",
        "title": {
          "en": "Close all curtains in one zone",
          "nl": "Sluit alle gordijnen in een zone"
        },
        "titleFormatted": {
          "en": "Close all curtains in zone [[zone]]",
          "nl": "Sluit alle gordijnen in zone [[zone]]"
        },
        "args": [
          {
            "name": "zone",
            "type": "autocomplete",
            "placeholder": {
              "en": "Zone"
            }
          }
        ]
      },
      {
        "id": "SetZone",
        "title": {
          "en": "Set the position for all curtains in one zone",
          "nl": "Zet de positie van alle gordijnen in een zone"
        },
        "titleFormatted": {
          "en": "Set the position for all curtains in zone [[zone]] to [[windowcoverings_set]]",
          "nl": "Zet de positie van alle gordijnen in zone [[zone]] naar [[windowcoverings_set]]"
        },
        "hint": {
          "en": "Change the position to open (100%), closed (0%), or a value in between.",
          "nl": "Verander de positie naar open (100%), gesloten (0%), of een een waarde daartussen."
        },
        "args": [
          {
            "name": "zone",
            "type": "autocomplete",
            "placeholder": {
              "en": "Zone"
            }
          },
          {
            "name": "windowcoverings_set",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "value": 0.5,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "CalibrateZone",
        "title": {
          "en": "Trigger a re-calibration of all slides in one zone",
          "nl": "Start een her-calibratie van alle gordijnen in een zone"
        },
        "titleFormatted": {
          "en": "Trigger a re-calibration for all curtains in zone [[zone]]",
          "nl": "Start een her-calibratie van alle gordijnen in zone [[zone]]"
        },
        "args": [
          {
            "name": "zone",
            "type": "autocomplete",
            "placeholder": {
              "en": "Zone"
            }
          }
        ]
      }
    ]
  }
}